# This is an example PKGBUILD file. Use this as a start to creating your own,
# and remove these comments. For more information, see 'man PKGBUILD'.
# NOTE: Please fill out the license field for your package! If it is unknown,
# then please put 'unknown'.

# Maintainer: Julian Pollinger <julian@pollinger.dev>
pkgname=cvc5-bin
pkgver=1.0.2
pkgrel=3
pkgdesc="cvc5 is a tool for determining the satisfiability of a first order formula modulo a first order theory (or a combination of such theories). "
arch=(x86_64)
url="https://github.com/cvc5/cvc5"
license=('GPLv3')
depends=()
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=("$url/releases/download/cvc5-$pkgver/cvc5-Linux")
noextract=("cvc5-Linux")
sha256sums=('f8734f8db1032f706a01bd5ee40e4e54fd073bc360c823af827bccc98fc32d23')

package() {
	mkdir -p $pkgdir/usr/bin
	cp cvc5-Linux $pkgdir/usr/bin/cvc5
	chmod +x $pkgdir/usr/bin/cvc5
}

